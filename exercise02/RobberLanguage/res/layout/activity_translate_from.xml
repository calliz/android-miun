<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TranslateFromActivity" >

    <TextView
        android:id="@+id/translate_from_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="@string/text_to_retranslate"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/retranslate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_from_title"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textview_border"
        android:hint="@string/text_to_be_retranslated"
        android:singleLine="true"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/retranslate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/retranslate_text"
        android:background="@drawable/textview_border"
        android:onClick="retranslateText"
        android:text="@string/retranslate"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/retranslated_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retranslate_button"
        android:layout_marginBottom="10dp"
        android:text="@string/retranslated_text"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/retranslated_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/retranslated_title"
        android:background="@drawable/textview_border"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@android:color/white" />

</RelativeLayout>