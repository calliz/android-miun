<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme, dependent on API level. This theme is replaced -->
    <!-- by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="Theme.NoBackground" parent="android:Theme">

        <!-- Theme customizations available in newer API levels can go in -->
        <!-- res/values-vXX/styles.xml, while customizations related to -->
        <!-- backward-compatibility can go here. -->

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small	</item>

        <!-- set default widget styles -->
        <item name="android:alertDialogStyle">@style/AlertDialog</item>
        <item name="android:buttonStyle">@style/GenericButton</item>
    </style>

    <style name="TextView" parent="@style/Theme.NoBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextView.Small"></style>

    <style name="TextView.Large">
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="Button" parent="@style/Theme.NoBackground">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Button.Large">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditText" parent="@style/Theme.NoBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText.Small">
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Large">
        <item name="android:gravity">top|left</item>
        <item name="android:longClickable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="GenericButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>