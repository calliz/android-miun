<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robberlanguage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoBackground" >
        <activity
            android:name="com.example.robberlanguage.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.robberlanguage.AboutDialogFragment"
            android:label="@string/title_activity_about_dialog_fragment" >
        </activity>
        <activity
            android:name="com.example.robberlanguage.TranslateActivity"
            android:label="@string/title_activity_translate"
            android:parentActivityName="com.example.robberlanguage.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robberlanguage.MainActivity" />
        </activity>
    </application>

</manifest>